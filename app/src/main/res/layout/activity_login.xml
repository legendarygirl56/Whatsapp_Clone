<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:textSize="25dp"
        android:text="WELCOME TO WHATSAPP !!"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text="Verify Your Name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:text="Please enter your mobile number. You will get a SMS including a verification code."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">

        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:ccp_autoDetectCountry="true"
            android:layout_margin="20dp"
            app:ccp_showNameCode="true"
            app:ccp_contentColor="#000000"
            app:ccp_textSize="20dp"
            android:layout_gravity="center"/>

    <EditText
        android:id="@+id/PhoneNumEt"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:maxLength="10"
        android:inputType="phone"
        android:layout_marginRight="25dp"
        android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/nextbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:textSize="25dp"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:clickable="false"
        android:layout_gravity="center"/>

</LinearLayout>